<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.edu.utng.juegos.MenusJuegosActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imv_img"

        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Juego 1"
        android:textSize="30dp"
        android:layout_alignTop="@+id/imv_img"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/button1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:onClick="presionado"
        android:text="Jugar"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imv_img1"
        android:layout_below="@+id/imv_img"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:onClick="presionado"
        android:text="Jugar"
        android:layout_below="@+id/button1"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Juego 2"
        android:textSize="30dp"
        android:id="@+id/txt_2"
        android:layout_marginTop="50dp"
        android:layout_alignTop="@+id/imv_img1"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/imv_img2"
        android:layout_below="@id/imv_img1"

        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Juego 3"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        android:layout_alignTop="@+id/imv_img2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="257dp" />

    <Button
        android:id="@+id/button_tres"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:onClick="presionado"
        android:text="Jugar"
        android:layout_below="@+id/button2"
        android:layout_toEndOf="@+id/txt_2" />













    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:onClick="presionado"
        android:text="Jugar"
        android:layout_marginTop="110dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Juego 4"
        android:textSize="30dp"
        android:id="@+id/txt_1"
        android:layout_marginTop="160dp"
        android:layout_alignTop="@+id/imv_img1"
        android:layout_centerHorizontal="true" />













</RelativeLayout>
